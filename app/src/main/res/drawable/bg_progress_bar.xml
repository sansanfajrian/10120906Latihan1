<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/normal_margin" />
            <solid android:color="@color/mountain_meadow" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <solid android:color="@color/fun_green" />
                <corners
                    android:topLeftRadius="@dimen/normal_margin"
                    android:bottomLeftRadius="@dimen/normal_margin"/>
            </shape>
        </scale>
    </item>

</layer-list>